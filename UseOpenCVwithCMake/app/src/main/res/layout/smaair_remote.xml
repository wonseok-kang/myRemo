<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:orientation = "vertical"
android:background="#ffffff"
tools:context=".centuryRemoteActivity">

<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="30dp"
    android:textSize="30dp"
    android:text="Air Cleaner REMO"
    android:layout_gravity="center"/>

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_marginLeft="5dp"
    android:layout_gravity="center"
    android:gravity="center"
    android:layout_marginTop="40dp"
    android:layout_marginRight="5dp">

    <ImageButton
        android:id="@+id/sapowerOn"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:text="전원켜기"
        android:background="@drawable/poweroff"
        android:onClick="irSend" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="40dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="70dp"
            android:gravity="center"
            android:layout_gravity="center"
            android:orientation="vertical">

            <ImageButton
                android:id="@+id/windup"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:background="@drawable/channelupselect"
                android:onClick="irSend" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:layout_height="wrap_content"
                android:text="풍량"
                android:textSize="25dp"
                android:padding="5dp"/>

            <ImageButton
                android:id="@+id/winddown"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:background="@drawable/channeldownselect"
                android:onClick="irSend" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center"
            android:gravity="center">

            <ImageButton
                android:layout_gravity="center"
                android:id="@+id/chomise"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:background="@drawable/windbutton"
                android:onClick="irSend" />

            <TextView
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="초/미세먼지"
                android:textSize="25dp"/>
        </LinearLayout>

    </LinearLayout>
</LinearLayout>

</LinearLayout>